'<h2>Test 1: 3 Columnas - Python, Octave, Rust</h2>

@{columns 3}

'<div style="background: #ffebee; padding: 10px;">
'<h3>Python</h3>
@{python}
# Cálculo vectorial
import math
x = [1, 2, 3, 4, 5]
suma = sum(x)
promedio = suma / len(x)
print(f"Suma: {suma}")
print(f"Promedio: {promedio}")
@{end python}
'</div>

'<div style="background: #e3f2fd; padding: 10px;">
'<h3>Octave</h3>
@{octave}
% Vector y operaciones
v = [1, 2, 3, 4, 5];
suma = sum(v);
promedio = mean(v);
fprintf('Suma: %f\n', suma);
fprintf('Promedio: %f\n', promedio);
@{end octave}
'</div>

'<div style="background: #fff3e0; padding: 10px;">
'<h3>Rust</h3>
@{rust}
fn main() {
    let v = vec![1, 2, 3, 4, 5];
    let suma: i32 = v.iter().sum();
    let promedio = suma as f64 / v.len() as f64;
    println!("Suma: {}", suma);
    println!("Promedio: {:.2}", promedio);
}
@{end rust}
'</div>

@{end columns}

'<h2>Test 2: 2 Columnas - C++ y JavaScript</h2>

@{columns 2}

'<div style="background: #f3e5f5; padding: 10px;">
'<h3>C++</h3>
@{cpp}
#include <iostream>
#include <vector>
using namespace std;

int main() {
    vector<int> nums = {10, 20, 30};
    int suma = 0;
    for(int n : nums) suma += n;
    cout << "Suma: " << suma << endl;
    return 0;
}
@{end cpp}
'</div>

'<div style="background: #e8f5e9; padding: 10px;">
'<h3>JavaScript</h3>
@{javascript}
// Array y reducción
const nums = [10, 20, 30];
const suma = nums.reduce((a, b) => a + b, 0);
const promedio = suma / nums.length;
console.log(`Suma: ${suma}`);
console.log(`Promedio: ${promedio}`);
@{end javascript}
'</div>

@{end columns}

'<h2>Test 3: 3 Columnas - Fortran, C, Go</h2>

@{columns 3}

@{fortran}
program suma_fortran
    implicit none
    integer :: i, suma
    suma = 0
    do i = 1, 5
        suma = suma + i
    end do
    print *, 'Suma:', suma
end program suma_fortran
@{end fortran}

@{c}
#include <stdio.h>
int main() {
    int suma = 0;
    for(int i = 1; i <= 5; i++) {
        suma += i;
    }
    printf("Suma: %d\n", suma);
    return 0;
}
@{end c}

@{go}
package main
import "fmt"
func main() {
    suma := 0
    for i := 1; i <= 5; i++ {
        suma += i
    }
    fmt.Printf("Suma: %d\n", suma)
}
@{end go}

@{end columns}

'<h2>Test 4: 4 Columnas - Python, Ruby, Perl, Lua</h2>

@{columns 4}

@{python}
# Python
x = sum(range(1, 6))
print(f"Suma: {x}")
@{end python}

@{ruby}
# Ruby
x = (1..5).sum
puts "Suma: #{x}"
@{end ruby}

@{perl}
# Perl
my $suma = 0;
$suma += $_ for 1..5;
print "Suma: $suma\n";
@{end perl}

@{lua}
-- Lua
suma = 0
for i = 1, 5 do
    suma = suma + i
end
print("Suma: " .. suma)
@{end lua}

@{end columns}

