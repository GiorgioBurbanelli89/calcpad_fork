<!DOCTYPE html>
<html lang="es">

<!-- #region HEAD -->
<head>
  <meta charset="UTF-8">
  <title>14 - Chart.js</title>

  <!-- #region ESTILOS -->
  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 20px;
      background-color: #f0f0f0;
    }

    h1 {
      text-align: center;
      color: #333;
    }

    .seccion {
      background: white;
      padding: 30px;
      margin: 20px auto;
      max-width: 800px;
      border-radius: 8px;
    }

    .chart-container {
      position: relative;
      height: 300px;
      margin: 20px 0;
    }

    h2 {
      color: #2196f3;
    }
  </style>
  <!-- #endregion -->
</head>
<!-- #endregion -->

<!-- #region BODY -->
<body>
  <h1>üìä Gr√°ficas con Chart.js</h1>

  <!-- #region GR√ÅFICA DE L√çNEAS -->
  <div class="seccion">
    <h2>üìà Gr√°fica de L√≠neas</h2>
    <div class="chart-container">
      <canvas id="lineChart"></canvas>
    </div>
  </div>
  <!-- #endregion -->

  <!-- #region GR√ÅFICA DE BARRAS -->
  <div class="seccion">
    <h2>üìä Gr√°fica de Barras</h2>
    <div class="chart-container">
      <canvas id="barChart"></canvas>
    </div>
  </div>
  <!-- #endregion -->

  <!-- #region GR√ÅFICA PIE -->
  <div class="seccion">
    <h2>ü•ß Gr√°fica Circular (Pie)</h2>
    <div class="chart-container">
      <canvas id="pieChart"></canvas>
    </div>
  </div>
  <!-- #endregion -->

  <!-- #region SCRIPTS -->
  <!-- Cargar Chart.js desde CDN -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

  <script>
    // #region GR√ÅFICA DE L√çNEAS
    const lineCtx = document.getElementById('lineChart').getContext('2d');
    const lineChart = new Chart(lineCtx, {
      type: 'line',
      data: {
        labels: ['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio'],
        datasets: [{
          label: 'Ventas 2024',
          data: [12, 19, 3, 5, 2, 3],
          borderColor: '#2196f3',
          backgroundColor: 'rgba(33, 150, 243, 0.1)',
          tension: 0.4
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          legend: {
            display: true
          }
        }
      }
    });
    // #endregion

    // #region GR√ÅFICA DE BARRAS
    const barCtx = document.getElementById('barChart').getContext('2d');
    const barChart = new Chart(barCtx, {
      type: 'bar',
      data: {
        labels: ['Producto A', 'Producto B', 'Producto C', 'Producto D'],
        datasets: [{
          label: 'Unidades Vendidas',
          data: [65, 59, 80, 81],
          backgroundColor: [
            '#2196f3',
            '#4caf50',
            '#ff9800',
            '#f44336'
          ]
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          legend: {
            display: false
          }
        }
      }
    });
    // #endregion

    // #region GR√ÅFICA PIE
    const pieCtx = document.getElementById('pieChart').getContext('2d');
    const pieChart = new Chart(pieCtx, {
      type: 'pie',
      data: {
        labels: ['JavaScript', 'Python', 'Java', 'C++', 'Otros'],
        datasets: [{
          data: [30, 25, 20, 15, 10],
          backgroundColor: [
            '#2196f3',
            '#4caf50',
            '#ff9800',
            '#f44336',
            '#9c27b0'
          ]
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false
      }
    });
    // #endregion

    console.log('‚úÖ Chart.js cargado');
    console.log('üìä Gr√°ficas creadas:', lineChart, barChart, pieChart);
  </script>
  <!-- #endregion -->

  <!-- #region C√ìDIGO DE EJEMPLO -->
  <div class="seccion">
