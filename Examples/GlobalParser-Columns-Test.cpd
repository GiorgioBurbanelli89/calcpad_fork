#column
'Octave/MATLAB:
@{octave}
A = [1,2; 3,4];
B = [5,6; 7,8];
C = A * B;
disp("A * B =");
disp(C);
@{end octave}
#column
'JavaScript:
@{js}
// Matrix multiplication
const A = [[1,2],[3,4]];
const B = [[5,6],[7,8]];
const C = [
  [A[0][0]*B[0][0]+A[0][1]*B[1][0], A[0][0]*B[0][1]+A[0][1]*B[1][1]],
  [A[1][0]*B[0][0]+A[1][1]*B[1][0], A[1][0]*B[0][1]+A[1][1]*B[1][1]]
];
console.log("A * B =");
console.log(C);
@{end js}
