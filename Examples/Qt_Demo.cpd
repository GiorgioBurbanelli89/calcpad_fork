#include <iostream>
#include <cmath>

int main() {
    double radio = 5.0;
    double pi = 3.14159265;
    double area = pi * radio * radio;
    std::cout << "Circulo:" << std::endl;
    std::cout << "  radio = " << radio << std::endl;
    std::cout << "  area = " << area << std::endl;
    return 0;
}
