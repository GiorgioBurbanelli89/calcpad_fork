"Ejemplo 2: Calculo de Pi
#columns 3
'Rust - Serie Leibniz:
@{rust}
fn main() {
    let mut pi = 0.0;
    for i in 0..1000 {
        let term = 1.0 / (2.0 * i as f64 + 1.0);
        if i % 2 == 0 {
            pi += term;
        } else {
            pi -= term;
        }
    }
    pi *= 4.0;
    println!("Pi aprox = {:.6}", pi);
}
@{end rust}
#column
'Octave - Serie Leibniz:
@{octave}
pi_aprox = 0;
for i = 0:999
    term = 1 / (2*i + 1);
    if mod(i, 2) == 0
        pi_aprox = pi_aprox + term;
    else
        pi_aprox = pi_aprox - term;
    end
end
pi_aprox = pi_aprox * 4;
fprintf('Pi aprox = %.6f\n', pi_aprox);
@{end octave}
#column
'Fortran - Serie Leibniz:
@{fortran}
program calc_pi
    implicit none
    real(8) :: pi_aprox, term
    integer :: i
    pi_aprox = 0.0d0
    do i = 0, 999
        term = 1.0d0 / (2.0d0 * i + 1.0d0)
        if (mod(i, 2) == 0) then
            pi_aprox = pi_aprox + term
        else
            pi_aprox = pi_aprox - term
        end if
    end do
    pi_aprox = pi_aprox * 4.0d0
    write(*,'(A,F10.6)') 'Pi aprox = ', pi_aprox
end program calc_pi
@{end fortran}
#end columns

