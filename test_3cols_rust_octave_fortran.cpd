@{fortran}
program test
    implicit none
    integer :: a, b, suma
    a = 5
    b = 10
    suma = a + b
    write(*,'(A,I0)') 'a = ', a
    write(*,'(A,I0)') 'b = ', b
    write(*,'(A,I0)') 'suma = ', suma
