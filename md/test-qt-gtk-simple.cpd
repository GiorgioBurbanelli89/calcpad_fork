'Test Qt and GTK - Simple Examples

"This file tests that #qt and #gtk work correctly with #include directives."

@{qt}
#include <iostream>
using namespace std;

int main()
{
    cout << "=== Qt GUI Framework ===" << endl;
    cout << "Cross-platform: Windows, Linux, macOS" << endl;
    cout << "Used by: VLC, OBS, Telegram" << endl;
    cout << endl;
    cout << "Example code:" << endl;
    cout << "  QApplication app(argc, argv);" << endl;
    cout << "  QMainWindow window;" << endl;
    cout << "  window.show();" << endl;

    return 0;
}
@{end qt}

@{gtk}
#include <stdio.h>

int main()
{
    printf("=== GTK GUI Framework ===\n");
    printf("Native on Linux/GNOME\n");
    printf("Lightweight and efficient\n");
    printf("Used by: GIMP, Inkscape, Blender\n");
    printf("\n");
    printf("Example code:\n");
    printf("  GtkWidget *window = gtk_window_new();\n");
    printf("  gtk_window_set_title(window, \"Calcpad GTK\");\n");
    printf("  gtk_widget_show(window);\n");

    return 0;
}
@{end gtk}
