using System;

class Program
{
    static void Main()
    {
        Console.WriteLine("=== Avalonia UI Framework ===");
        Console.WriteLine("Para crear una GUI real de Avalonia:");
        Console.WriteLine("");
        Console.WriteLine("1. Instalar template:");
        Console.WriteLine("   dotnet new install Avalonia.Templates");
        Console.WriteLine("");
        Console.WriteLine("2. Crear proyecto:");
        Console.WriteLine("   dotnet new avalonia.app -n CalcpadAvalonia");
        Console.WriteLine("");
        Console.WriteLine("3. Ejecutar:");
        Console.WriteLine("   cd CalcpadAvalonia");
        Console.WriteLine("   dotnet run");
        Console.WriteLine("");
        Console.WriteLine("Esto creara una ventana GUI REAL que funciona en:");
        Console.WriteLine("- Windows");
        Console.WriteLine("- Linux");
        Console.WriteLine("- macOS");
    }
}
