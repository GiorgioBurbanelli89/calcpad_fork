#include <QWidget>
#include <QPushButton>
#include <QLabel>
#include <QVBoxLayout>
#include <QMessageBox>

int main(int argc, char *argv[])
{
    QApplication app(argc, argv);

    // Crear ventana principal
    QWidget window;
    window.setWindowTitle("Mi AplicaciÃ³n Qt");
    window.resize(400, 300);

    // Crear layout vertical
    QVBoxLayout *layout = new QVBoxLayout(&window);

    // Crear label
    QLabel *label = new QLabel("Ejemplo de Qt", &window);
    label->setStyleSheet("font-size: 20px;");
    layout->addWidget(label);

    // Crear botÃ³n
    QPushButton *button = new QPushButton("PresiÃ³name", &window);
    layout->addWidget(button);

    // Crear label para resultado
    QLabel *resultLabel = new QLabel("", &window);
    resultLabel->setStyleSheet("font-size: 16px; color: blue;");
    layout->addWidget(resultLabel);

    // Conectar evento click
    QObject::connect(button, &QPushButton::clicked, [&]() {
