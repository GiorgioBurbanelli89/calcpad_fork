@{gtk}
#include <stdio.h>
#define MAX_SIZE 100

int main()
{
    printf("=== GTK GUI Framework ===\n");
    printf("Native on Linux/GNOME\n");
    printf("Lightweight and efficient\n");
    printf("Used by: GIMP, Inkscape, Blender, GNOME\n");
    printf("\n");

    int x = 15;
    int y = 25;
    printf("Calculation: %d + %d = %d\n", x, y, x + y);
    printf("MAX_SIZE defined as: %d\n", MAX_SIZE);

    return 0;
}
@{end gtk}

