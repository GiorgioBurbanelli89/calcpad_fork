@{qt}
#include <iostream>
using namespace std;

int main()
{
    cout << "=== Qt GUI Framework ===" << endl;
    cout << "Cross-platform: Windows, Linux, macOS, Android, iOS" << endl;
    cout << "Used by: VLC, OBS Studio, Telegram, Autodesk Maya" << endl;
    cout << endl;

    int a = 10;
    int b = 20;
    cout << "Calculation: " << a << " + " << b << " = " << (a + b) << endl;

