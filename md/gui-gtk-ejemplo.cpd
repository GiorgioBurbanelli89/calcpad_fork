        box.set_margin_end(20)
        box.set_margin_top(20)
        box.set_margin_bottom(20)
        self.set_child(box)

        # Label tÃ­tulo
        label_title = Gtk.Label(label="Ejemplo de GTK Python")
        box.append(label_title)

        # BotÃ³n
        button = Gtk.Button(label="PresiÃ³name")
        button.set_size_request(150, 40)
        button.connect("clicked", self.on_button_clicked)
        box.append(button)

        # Label resultado
        self.label_result = Gtk.Label()
        box.append(self.label_result)

    def on_button_clicked(self, button):
        self.label_result.set_text("Â¡Hola desde GTK Python!")
        print("Â¡BotÃ³n presionado!")

def on_activate(app):
