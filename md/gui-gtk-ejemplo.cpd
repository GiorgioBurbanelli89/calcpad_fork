static void activate(GtkApplication *app, gpointer user_data)
{
    GtkWidget *window;
    GtkWidget *box;
    GtkWidget *label_title;
    GtkWidget *button;
    GtkWidget *label_result;

    // Crear ventana
    window = gtk_application_window_new(app);
    gtk_window_set_title(GTK_WINDOW(window), "Mi AplicaciÃ³n GTK");
    gtk_window_set_default_size(GTK_WINDOW(window), 400, 300);

    // Crear contenedor vertical
    box = gtk_box_new(GTK_ORIENTATION_VERTICAL, 10);
    gtk_widget_set_margin_start(box, 20);
    gtk_widget_set_margin_end(box, 20);
    gtk_widget_set_margin_top(box, 20);
    gtk_widget_set_margin_bottom(box, 20);
    gtk_window_set_child(GTK_WINDOW(window), box);

    // Crear label tÃ­tulo
    label_title = gtk_label_new("Ejemplo de GTK");
    PangoAttrList *attrs = pango_attr_list_new();
    pango_attr_list_insert(attrs, pango_attr_size_new(20 * PANGO_SCALE));
    gtk_label_set_attributes(GTK_LABEL(label_title), attrs);
    gtk_box_append(GTK_BOX(box), label_title);

    // Crear botÃ³n
    button = gtk_button_new_with_label("PresiÃ³name");
    gtk_widget_set_size_request(button, 150, 40);
    gtk_box_append(GTK_BOX(box), button);

    // Crear label resultado
    label_result = gtk_label_new("");
    PangoAttrList *attrs2 = pango_attr_list_new();
    pango_attr_list_insert(attrs2, pango_attr_size_new(16 * PANGO_SCALE));
    pango_attr_list_insert(attrs2, pango_attr_foreground_new(0, 0, 65535));
    gtk_label_set_attributes(GTK_LABEL(label_result), attrs2);
    gtk_box_append(GTK_BOX(box), label_result);

    // Conectar evento
    g_signal_connect(button, "clicked", G_CALLBACK(on_button_clicked), label_result);

    gtk_window_present(GTK_WINDOW(window));
}

int main(int argc, char **argv)
{
    GtkApplication *app;
    int status;

    app = gtk_application_new("com.example.miapp", G_APPLICATION_DEFAULT_FLAGS);
    g_signal_connect(app, "activate", G_CALLBACK(activate), NULL);
    status = g_application_run(G_APPLICATION(app), argc, argv);
    g_object_unref(app);

    return status;
}
