"Test FEM Octave Block 1"

a = 6'm
b = 4'm
n_a = 6
n_b = 4

@{octave}
% Datos del mesh
a = 6;
b = 4;
n_a = 6;
n_b = 4;

% Generar coordenadas de nodos
[X, Y] = meshgrid(linspace(0, a, n_a+1), linspace(0, b, n_b+1));
x_nodes = X(:);
y_nodes = Y(:);
n_nodes = length(x_nodes);

% Generar conectividad de elementos (cuadril√°teros)
elements = [];
for i = 1:n_a
    for j = 1:n_b
        n1 = (i-1)*(n_b+1) + j;
        n2 = n1 + (n_b+1);
        n3 = n2 + 1;
        n4 = n1 + 1;
        elements = [elements; n1 n2 n3 n4];
    end
end

% Crear figura (sin mostrar ventana)
figure('Position', [100 100 800 550], 'Color', 'w', 'visible', 'off');
hold on;

% Dibujar fondo amarillo claro
patch([0 a a 0], [0 0 b b], [1 1 0.8], ...
      'FaceAlpha', 0.2, ...
      'EdgeColor', 'none');

% Test simple
fprintf('Octave is working!\n');
hold off;
@{end octave}
